<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextdsfView02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:layout_weight="1"
        android:text="Alert"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#E98F02"
        android:textSize="55sp" />

    

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/alert_transparant"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        android:text="Designed and Programmed by-"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#E98F02"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView994"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
       android:gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        android:text="Omkar Patil\nShubham Chintalwar\nGhanshyam Lele"
        android:textSize="20sp" />
  
</LinearLayout>